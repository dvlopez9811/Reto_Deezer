<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000">

>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:id="@+id/imagen_cancion"
        android:background="@drawable/bordes_redondeados"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_nombre_cancion"
        android:layout_below="@id/imagen_cancion"
        android:textSize="30dp"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/josefin_sans_thin"

        />

    <TextView
        android:textColor="#fff"
        android:fontFamily="@font/josefin_sans_thin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_artista"
        android:layout_below="@id/txt_nombre_cancion"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:textColor="#fff"
        android:fontFamily="@font/josefin_sans_thin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_album"
        android:layout_below="@id/txt_artista"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:textColor="#fff"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_duracion"
        android:layout_below="@id/txt_album"
        android:textSize="15dp"
        android:fontFamily="@font/josefin_sans_thin"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Escuchar"
        android:textAllCaps="false"
        android:fontFamily="@font/josefin_sans_thin"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/bordes_redondeados"
        android:id="@+id/btn_escuchar"
        android:layout_below="@id/txt_duracion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"

        />


</RelativeLayout>
    </ScrollView>
</RelativeLayout>